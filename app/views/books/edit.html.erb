<div class="container">
  <div class="row mt-3">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>Editing Book</h2>
      
      <div class="mt-3">
      <% if @book.errors.any? %>
        <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
    
      <%= form_with model: @book, method: :patch do |f| %>
        <div class="form-group">
          <label for="inputName">Title</label>
        <%= f.text_field :title, autofocus: true, id: "inputTitle", placeholder: "タイトル", class: "form-control" %>
        </div>
        <div class="form-group">
          <label for="inputIntroduction">Introduction</label>
        <%= f.text_area :body, autofocus: true, id:"inputOpinion", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Book", class: "btn btn-success" %>
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book.id) %>
      |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>