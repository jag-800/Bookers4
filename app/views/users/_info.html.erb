<h2>User info</h2>
<%= image_tag user.get_profile_image(100,100) %>
<table class="table">
  <tbody>
    <tr>
      <td>
        <label>name</label>
      </td>
      <td>
        <%= user.name %>
      </td>
    </tr>
    <tr>
      <td>
        <label>introduction</label>
      </td>
      <td>
        <%= user.introduction %>
      </td>
    </tr>
  </tbody>
</table>

<p>
  <%= link_to edit_user_path(user), class:"btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</p>
